{
  "name": "@stefanprobst/remark-graphviz",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "license": "MIT",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier . --list-different --ignore-path .gitignore",
    "format:fix": "yarn run format --write",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "yarn run lint --fix",
    "prepare": "simple-git-hooks",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "validate": "yarn run format && yarn run lint && yarn run test"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "@hpcc-js/wasm": "^1.8.1",
    "rehype-parse": "^7.0.1",
    "svgo": "^2.3.1",
    "unified": "^9.0.0",
    "unist-util-visit": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@stefanprobst/commitlint-config": "^1.0.2",
    "@stefanprobst/eslint-config-node": "^2.0.1",
    "@stefanprobst/prettier-config": "^1.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.0",
    "prettier": "^2.3.2",
    "rehype-stringify": "^8.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "simple-git-hooks": "^2.5.1"
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": [
      "@stefanprobst/eslint-config-node"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.@(json|md)": "prettier --write"
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn run validate"
  }
}
